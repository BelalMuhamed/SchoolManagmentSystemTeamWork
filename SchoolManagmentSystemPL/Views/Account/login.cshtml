    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-container">
                    <div class="login-header">
                        <div class="icon">
                            <i class="bi bi-book"></i>
                        </div>
                        <h2>Student Management System</h2>
                        <p>Sign in to access your account</p>
                    </div>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Username</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter your username" required>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password" required>
                        </div>

                        <div class="mb-4 d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                                <label class="form-check-label" asp-for="RememberMe">
                                    Remember me
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
