@model IEnumerable<SchoolManagmentSystem.DAL.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<h2 class="text-center">Subjects List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Subject</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Total Degree</th>
            <th>Min Degree</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.TotalDegree</td>
                <td>@item.MinDegree</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-info me-2"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
                <td class="text-center">
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"> <i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

