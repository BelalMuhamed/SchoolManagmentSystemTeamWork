@model IEnumerable<SchoolManagmentSystem.DAL.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<h2>Subjects List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Subject</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Total Degree</th>
            <th>Min Degree</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.TotalDegree</td>
                <td>@item.MinDegree</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

