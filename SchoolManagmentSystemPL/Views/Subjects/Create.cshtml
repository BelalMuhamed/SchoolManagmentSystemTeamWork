@model SchoolManagmentSystem.DAL.Models.Subject

@{
    ViewData["Title"] = "Create Subject";
}

<h2 class="text-center">Create New Subject</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-4">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="TotalDegree"></label>
        <input asp-for="TotalDegree" class="form-control" type="number" />
        <span asp-validation-for="TotalDegree" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="MinDegree"></label>
        <input asp-for="MinDegree" class="form-control" type="number" />
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary me-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

