@using SchoolManagmentSystemDAL.ViewModels
@model StudentDegreeVM

<div class="container mt-4">
    <h2 class="text-center mb-4">Create Student Degree</h2>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Create" class="p-4 border rounded shadow bg-white">

                <!-- Student -->
                <div class="mb-3">
                    <label for="StudentId" class="form-label">Student</label>
                    <select asp-for="StudentId" class="form-select">
                        <option value="">-- Select a Student --</option>
                        @foreach (var student in Model.Students)
                        {
                            <option value="@student.UserId">@student.User.UserName</option>
                        }
                    </select>
                </div>

                <!-- Subject -->
                <div class="mb-3">
                    <label for="SubjectId" class="form-label">Subject</label>
                    <select asp-for="SubjectId" class="form-select">
                        <option value="">-- Select a Subject --</option>
                        @foreach (var subject in Model.Subjects)
                        {
                            <option value="@subject.Id">@subject.Name</option>
                        }
                    </select>
                </div>

                <!-- Class -->
                <div class="mb-3">
                    <label for="ClassId" class="form-label">Class</label>
                    <select asp-for="ClassId" class="form-select">
                        <option value="">-- Select a Class --</option>
                        @foreach (var cls in Model.Classs)
                        {
                            <option value="@cls.Id">@cls.Name</option>
                        }
                    </select>
                </div>

                <!-- Teacher -->
                <div class="mb-3">
                    <label for="TeacherId" class="form-label">Teacher</label>
                    <select asp-for="TeacherId" class="form-select">
                        <option value="">-- Select a Teacher --</option>
                        @foreach (var teacher in Model.Teachers)
                        {
                            <option value="@teacher.UserId">@teacher.User.UserName</option>
                        }
                    </select>
                </div>

                <!-- Degree -->
                <div class="mb-3">
                    <label for="Degree" class="form-label">Degree</label>
                    <input asp-for="Degree" class="form-control" type="number" step="0.1" min="0" max="100" required />
                </div>

                <!-- Status -->
                <div class="mb-3">
                    <label for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                        <option value="F">F</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary w-50 me-2">Save</button>
                    <a asp-action="Index" class="btn btn-secondary w-50 ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
