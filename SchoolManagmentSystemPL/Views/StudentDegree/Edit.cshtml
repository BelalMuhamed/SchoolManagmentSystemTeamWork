@model SchoolManagmentSystem.DAL.Models.StudentDegree

@{
    ViewData["Title"] = "Edit Student Degree";
}

<h2>Edit Student Degree</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="StudentId" />
    <input type="hidden" asp-for="SubjectId" />
    <input type="hidden" asp-for="ClassId" />
    <input type="hidden" asp-for="TeacherId" />

    <div class="form-group">
        <label for="Degree">Degree</label>
        <input asp-for="Degree" class="form-control" type="number" min="0" max="100" />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
            <option value="F">F</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
