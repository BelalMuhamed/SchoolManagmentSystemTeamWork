@model StudentAttendance
﻿


@{
    ViewData["Title"] = "Delete Attendance";
}


<h2>Are you sure you want to delete this attendance record?</h2>

<div>
    <p><strong>Student:</strong> @(Model.student?.User?.UserName ?? "Unknown")</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
