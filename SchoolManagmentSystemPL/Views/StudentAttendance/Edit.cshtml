@using SchoolManagmentSystemDAL.ViewModels
@model StudentAttendanceVM

@{
    ViewData["Title"] = "Edit Attendance";
}

<h2 class="text-center">Edit Attendance</h2>

<form asp-action="Edit">
    <div class="form-group mb-4">
        <label asp-for="StudentId" class="control-label"></label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="@AttendanceStatus.Present" asp-for="Status">Present</option>
            <option value="@AttendanceStatus.Absent" asp-for="Status">Absent</option>
        </select>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="date" />
    </div>

    <input type="hidden" asp-for="StudentId" />

    <div class="text-center mt-3">
        <button type="submit" class="btn btn-primary me-3">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>


</form>
