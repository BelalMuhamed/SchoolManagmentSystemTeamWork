@using SchoolManagmentSystemDAL.ViewModels
@model StudentAttendanceVM
@{
    ViewData["Title"] = "Mark Attendance";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Mark Student Attendance</h2>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Create" method="post" class="p-4 border rounded shadow bg-white">
                <!-- Select Student -->
                <div class="mb-3">
                    <label for="StudentId" class="form-label">Select Student</label>
                    <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-select"></select>
                </div>

                <!-- Attendance Status -->
                <div class="mb-3">
                    <label class="form-label">Attendance Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="0">Present</option>
                        <option value="1">Absent</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Create</button>
            </form>
        </div>
    </div>
</div>
